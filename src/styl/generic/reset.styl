$white = #fff

*
  border 0
  margin 0
  outline 0
  padding 0

  &
  &:after
  &:before
    box-sizing border-box

html
  font-size 62.5%

  @media (min-width: 600px)
    font-size 65.625%

  @media (min-width: 900px)
    font-size 68.75%

body
  color $white
  font-family 'Lucida Sans Unicode', 'Lucida Grande', sans-serif
  font-size 2rem
  line-height 1.2

h1
  font-family 'Over the Rainbow', cursive
  font-size 6rem
  margin-bottom 30vh
  
main
  background-image url('../../media/livethemoment.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  display flex
  flex-direction column
  justify-content center
  height 100vh
  text-align center
  width 100vw
