.search
  background-color rgba(255,255,255,.4)
  display flex
  flex-direction row
  padding .5rem
  width 60vw

  @media screen and (min-width: 450px)
    padding 1rem
    width 50vw

  &__icon
    fill $light-text-color-primary
    height 2rem
    width 2rem

  &__input
    background-color transparent
    color $light-text-color-primary
    padding-left .5rem
    width 100%

    @media screen and (min-width: 450px)
      padding-left 1rem

    &::placeholder
      color $dark-text-color-disabled
      font inherit
      opacity 1
