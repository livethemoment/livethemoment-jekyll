.article
  font-weight 300

  &__title
    display inline-block
    font-size 3.6rem
    margin-bottom 2rem

    & ~ &
      margin-left 1rem

  &__description
    border-bottom $dark-text-color-secondary solid .1rem
    color $dark-text-color-secondary
    font-size 1.8rem
    margin-bottom 2rem
    padding-bottom 2rem

  &__content
    h1
    h2
    h3
    h4
    h5
    h6
      margin-bottom 2rem

    h1
      font-size 3.2rem

    h2
      font-size 2.5rem

    h3
      font-size 2rem

    h4
      font-size 1.5rem

    h5
      font-size 1.2rem

    h6
      font-size 1rem

    p
      font-size 1.9rem
      margin-bottom 2.2rem

    ol
    ul
      font-size 1.5rem
      list-style-position inside

    img
      width 100%
